model Person {
  id          Int        @id @default(autoincrement())
  name        String // Ім'я
  surname     String? // Призвище
  role        PersonRole
  photo       String? // Фото
  description String?
  movies      Movie[] // Зв'язок many to many з фільмом
}

enum PersonRole {
  ACTOR
  DIRECTOR
}
