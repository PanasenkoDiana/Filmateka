model Person {
  id          Int          @id @default(autoincrement())
  name        String // Ім'я
  surname     String? // Призвище
  roles       PersonRole[]
  photo       String? // Фото
  description String?
  movies      Movie[] // Зв'язок many to many з фільмом
}

model PersonRole {
  id     Int      @id @default(autoincrement())
  role   Role
  person Person[]
}

enum Role {
  ACTOR
  DIRECTOR
}
 