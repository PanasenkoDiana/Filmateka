model Film {
  id                Int          @id @default(autoincrement())
  title             String
  rating            Float?
  releaseYear       Int
  mainLanguage      String
  productionCountry String
  ageRating         String
  runtime           Int
  poster            String
  shortDescription  String
  additionalInfo    String?
  interestingFacts  String?
  userReviews       UserReview[]
  genres            Genre[]
  movieStills       Image[]
  actors            Actor[]
}
